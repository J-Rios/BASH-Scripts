CHAT_ID="$1"
TOKEN=`head -n 1 ./token.txt`

# Check if correct number of arguments has been provided
if [ $# -lt 1 ]; then
    echo "  You need to provide the chat ID."
    echo "  Example:"
    echo "  ./bot_get_chat_info -123456"
    echo ""
    exit 1
fi

# Check if Token has been set in token file
if [ "$TOKEN" == "NNNNNNNNN:XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX" ]; then
    echo "  You need to set Bot Token in file token.txt."
    echo "  Example:"
    echo "  echo \"123456789:ABCDEfgfLxAupbRw3JKdavbBX5J2757168S\" > token.txt"
    echo ""
    exit 1
fi

curl -s "https://api.telegram.org/bot$TOKEN/getChat?chat_id=$CHAT_ID" | python -m json.tool
echo " "
curl -s "https://api.telegram.org/bot$TOKEN/getChatAdministrators?chat_id=$CHAT_ID" | python -m json.tool
echo " "

exit 0
